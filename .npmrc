# NPM Configuration for Placemento Platform
# This configuration helps manage CI/CD performance and security auditing

# Registry configuration
registry=https://registry.npmjs.org/

# CI/CD optimizations
progress=false
loglevel=warn

# Security audit level for CI (focus on high/critical for production)
audit-level=high

# Package management
save-exact=true
engine-strict=true

# Performance monitoring
timing=false
